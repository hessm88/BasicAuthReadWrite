<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <display-name>basic-auth-rw-webapp</display-name>

  <filter>
    <filter-name>http-request-context</filter-name>
    <filter-class>org.codehaus.enunciate.webapp.HTTPRequestContextFilter</filter-class>
  </filter>

  <filter>
    <filter-name>wadl-filter</filter-name>
    <filter-class>org.codehaus.enunciate.webapp.IDLFilter</filter-class>
    <init-param>
      <param-name>assumed-base-address</param-name>
      <param-value>http://localhost:8080/basic-auth-rw-webapp</param-value>
    </init-param>
    <init-param>
      <param-name>match-prefix</param-name>
      <param-value>:resources base="</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>http-request-context</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>wadl-filter</filter-name>
    <url-pattern>/application.wadl</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>jersey</servlet-name>
    <servlet-class>org.codehaus.enunciate.modules.jersey.EnunciateJerseyServletContainer</servlet-class>
    <init-param>
      <param-name>org.codehaus.enunciate.modules.jersey.config.ServletPath</param-name>
      <param-value>/rest</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/json/auth/admin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/json/auth/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/json/auth/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/json/name/create</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/json/name/name</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/rest/auth/admin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/rest/auth/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/rest/auth/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/rest/name/create</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/rest/name/name</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/xml/auth/admin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/xml/auth/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/xml/auth/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/xml/name/create</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jersey</servlet-name>
    <url-pattern>/xml/name/name</url-pattern>
  </servlet-mapping>

  <mime-mapping>
    <extension>wsdl</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>
</web-app>
